@model MvcStokTakip.Models.Entity.TblUrunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <table>Ürün Adı</table>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="30" />
    </div>
    <div>
        <table>Ürün Markası</table>
        <input type="text" class="form-control" name="MARKA"  required="" />
    </div>
    <div>
        <table>Kategorisi Seçiniz</table>


        @*DropDownList ile veritabanından veri çekme (KATEGORID)*@

        @Html.DropDownListFor(m => m.TblKategorıler.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })

    </div>
    <div>
        <table>Ürün Fiyatı</table>
        <input type="text" class="form-control" name="FIYAT" required="" />
    </div>
    <div>
        <table>Stok Adet</table>
        <input type="text" class="form-control" name="STOK" required="" />
    </div>
    <div style="margin-top: 15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>

</form>

